@*
  @model relaciona la actual vista con un modelo en el cual estan las validaciones.

*@

@model List<Beer>

<h1>Cervezas</h1>

<p> 
    <a asp-action="Create" >Crear Cerveza. </a>      @* <---    Opcion Crear    *@
</p>


<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Marca</th>
            <th>otras</th>
        </tr>
    </thead>

    <tbody>
        @foreach( var beer in Model)
        {
            <tr>
                <td> 
                    @Html.DisplayFor( m => beer.Name)
                </td>
                <td>
                    @Html.DisplayFor( m => beer.Brand.Name)
                </td>
            </tr>
        }
    </tbody>

</table>
